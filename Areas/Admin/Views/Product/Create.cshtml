<div class="card shadow-lg border-0 rounded-3 mt-4">
    <div class="card-body p-4">

        <!-- العنوان -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="card-title fw-bold mb-0 text-success">✦ Create Product</h4>
        </div>

        <!-- الفورم -->
        <form action="/Admin/Product/Create" method="post" enctype="multipart/form-data">
            <!-- Product Name -->
            <div class="mb-3">
                <label for="ProductName" class="form-label fw-semibold">Product Name</label>
                <input type="text" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductName" placeholder="Enter product name" name="Name">
            </div>

            <!-- Product Description -->
            <div class="mb-3">
                <label for="ProductDescription" class="form-label fw-semibold">Product Description</label>
                <input type="text" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductDescription" placeholder="Enter product description" name="Description">
            </div>

            <!-- Product Price -->
            <div class="mb-3">
                <label for="ProductPrice" class="form-label fw-semibold">Product Price</label>
                <input type="number" step="0.01" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductPrice" placeholder="Enter product price" name="Price">
            </div>

            <!-- Product Image -->
            <div class="mb-3">
                <label for="ProductImg" class="form-label fw-semibold">Product Image</label>
                <input type="file" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductImg" name="file" accept="image/*">

                <!-- مكان عرض الصورة -->
                <div class="mt-3 text-center">
                    <img id="previewImg" src="#" alt="Preview Image"
                         class="img-fluid rounded-3 shadow-sm border d-none"
                         style="max-height: 200px; object-fit: cover;" />
                </div>
            </div>

            <!-- Product Discount -->
            <div class="mb-3">
                <label for="ProductDiscount" class="form-label fw-semibold">Product Discount (%)</label>
                <input type="number" step="0.01" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductDiscount" placeholder="Enter discount percentage" name="Discount">
            </div>

            <!-- Product Quantity -->
            <div class="mb-3">
                <label for="ProductQuantity" class="form-label fw-semibold">Product Quantity</label>
                <input type="number" class="form-control form-control-lg rounded-3 shadow-sm"
                       id="ProductQuantity" placeholder="Enter quantity in stock" name="Quantity">
            </div>

            <!-- Product Category -->
            <div class="mb-3">
                <label for="CategoryId" class="form-label fw-semibold">Product Category</label>
                <select class="form-select form-select-lg rounded-3 shadow-sm" id="CategoryId" name="CategoryId">
                    <option selected disabled>-- Select Category --</option>
                    @foreach (var item in ViewData["categories"] as List<Category>)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

            <!-- الأزرار -->
            <div class="d-flex justify-content-end">
                <button type="reset" class="btn btn-outline-secondary me-2 px-4 py-2 rounded-3">Cancel</button>
                <button type="submit" class="btn btn-success px-4 py-2 rounded-3 shadow-sm">Create</button>
            </div>
        </form>

    </div>
</div>

<!-- JavaScript لعرض الصورة -->
<script>
    document.getElementById("ProductImg").addEventListener("change", function (event) {
        const preview = document.getElementById("previewImg");
        const file = event.target.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.classList.remove("d-none");
            };
            reader.readAsDataURL(file);
        }
    });
</script>
