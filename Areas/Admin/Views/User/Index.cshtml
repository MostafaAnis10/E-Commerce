@model List<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div class="container my-4">
    <!-- Header -->
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="fw-bold text-primary">
                <i class="fas fa-users me-2"></i> All Users
            </h1>
            <a class="btn btn-success shadow-sm d-flex align-items-center" href="/Admin/User/Create">
                <i class="fas fa-plus me-2"></i> Create New
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" asp-action="Index" asp-controller="User" asp-area="Admin" class="d-flex">
                <input type="text" id="search" name="quary" class="form-control me-2" placeholder="Search by name or email..." value="@ViewBag.Query" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i> Search
                </button>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th scope="col" style="width: 20%;">ID</th>
                            <th scope="col" style="width: 25%;">Name</th>
                            <th scope="col" style="width: 25%;">Email</th>
                            <th scope="col" style="width: 30%;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted small">@item.Id</td>
                                <td class="fw-semibold">@item.UserName</td>
                                <td>@item.Email</td>
                                <td>
                                    <a class="btn btn-info btn-sm me-2 shadow-sm" href="/Admin/User/Edit?UserId=@item.Id">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="btn btn-warning btn-sm me-2 shadow-sm" href="/Admin/User/Block?UserId=@item.Id">
                                        <i class="fas fa-ban"></i> Block
                                    </a>
                                    <button class="btn btn-danger btn-sm shadow-sm" onclick="confirmDelete('@item.Id')">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
        <nav>
            <ul class="pagination">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&quary=@ViewBag.Query">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&quary=@ViewBag.Query">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&quary=@ViewBag.Query">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right"
        };

        // عرض إشعار فقط لو فيه كوكي
        var notif = '@Context.Request.Cookies["notifaction"]';
        if (notif) {
            toastr.success(notif);
        }

        function confirmDelete(UserId) {
            Swal.fire({
                title: "Are you sure?",
                text: "This action cannot be undone!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/User/Delete?UserId=" + UserId;
                }
            });
        }
    </script>
}
