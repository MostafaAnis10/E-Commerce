@model IEnumerable<Cart>

<div class="container my-5">
    <form method="post">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3">
                <h4 class="mb-0 fw-bold">
                    <i class="bi bi-cart-fill me-2"></i> Your Shopping Cart
                </h4>
            </div>

            <div class="card-body">
                <!-- زر المتابعة -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <a href="/Customer/Home/Index" class="btn btn-outline-primary w-100">
                            <i class="bi bi-arrow-left-circle me-2"></i> Continue Shopping
                        </a>
                    </div>
                </div>

                <!-- عناصر السلة -->
                @foreach (var item in Model)
                {
                    <div class="row border-bottom pb-3 mb-3 align-items-center">
                        <!-- صورة المنتج -->
                        <div class="col-12 col-lg-2 text-center">
                            <img src="~/images/@item.Product.Img" class="img-fluid rounded shadow-sm" alt="@item.Product.Name" style="max-height:100px;" />
                        </div>

                        <!-- تفاصيل المنتج -->
                        <div class="col-12 col-lg-5">
                            <h5 class="text-dark fw-bold">@item.Product.Name</h5>
                            <p class="text-muted mb-1">@item.Product.Description</p>
                            <span class="badge bg-secondary">Price: $@item.Product.Price</span>
                        </div>

                        <!-- التحكم في الكمية -->
                        <div class="col-12 col-lg-3 d-flex align-items-center justify-content-center">
                            <div class="btn-group" role="group">
                                <a href="/Customer/Cart/Increment?productid=@item.Product.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-plus-lg"></i>
                                </a>
                                <span class="px-3 fw-bold fs-5">@item.Count</span>
                                <a href="/Customer/Cart/Decrement?productid=@item.Product.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-dash-lg"></i>
                                </a>
                            </div>
                        </div>

                        <!-- زر الحذف -->
                        <div class="col-12 col-lg-2 text-center">
                            <a href="/Customer/Cart/Delete?productid=@item.Product.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Remove
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- الإجمالي -->
            <div class="card-footer bg-light border-0">
                <div class="row">
                    <div class="col-md-6 offset-md-6">
                        <ul class="list-group shadow-sm">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h5 class="fw-bold text-dark text-uppercase mb-0">Total</h5>
                                <h4 class="fw-bolder text-success mb-0">$@ViewBag.TotalPrice</h4>
                            </li>
                        </ul>
                        <a href="/Customer/Cart/Pay" class="btn btn-primary w-100 mt-4 py-2 fs-5 fw-bold">
                            <i class="bi bi-credit-card-2-back me-2"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
